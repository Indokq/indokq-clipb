# Anthropic API (Custom Base URL)
ANTHROPIC_BASE_URL=https://api.codemirror.codes/
ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_AUTH_TOKEN=your-api-key-here

# Model Configuration
MODEL_NAME=claude-sonnet-4.5
MAX_SEARCH_ROUNDS=3
EXECUTION_TIMEOUT=30000
ENABLE_CACHING=true

# Web Search Tool (Claude API native)
ENABLE_WEB_SEARCH=true
WEB_SEARCH_MAX_USES=5
WEB_SEARCH_ALLOWED_DOMAINS=
# Example: WEB_SEARCH_ALLOWED_DOMAINS=example.com,docs.example.com

# Web Fetch Tool (Claude API native - BETA)
# WARNING: Enables Claude to fetch URLs. Security risk if processing untrusted input.
WEB_FETCH_ENABLED=false
WEB_FETCH_MAX_USES=10
WEB_FETCH_ALLOWED_DOMAINS=
WEB_FETCH_MAX_TOKENS=100000
# Example: WEB_FETCH_ALLOWED_DOMAINS=github.com,docs.anthropic.com

# TUI Configuration
TUI_THEME=dark
LOG_LEVEL=info

# Context Management System
WORKSPACE_SCAN_ON_STARTUP=true
MAX_CONTEXT_TOKENS=4000
CACHE_WORKSPACE_METADATA=true
WORKSPACE_CACHE_TTL_HOURS=1
SESSION_CONTEXT_ENABLED=true
RELEVANCE_RANKING_ENABLED=true

# MCP (Model Context Protocol) Server Configuration
MCP_AUTO_CONNECT_ON_STARTUP=true
MCP_TOOL_TIMEOUT_MS=30000

# MCP_SERVERS - JSON array of MCP server configurations
# Supports stdio (local process), HTTP (modern), and SSE (legacy) transports
MCP_SERVERS=[]
# Example stdio server (local process):
# MCP_SERVERS=[{"name":"filesystem","command":"npx","args":["-y","@modelcontextprotocol/server-filesystem","/path/to/allowed/files"],"transport":"stdio","autoConnect":true}]
# Example HTTP server (modern - recommended for remote):
# MCP_SERVERS=[{"name":"github","url":"http://localhost:3000","transport":"http","autoConnect":true}]
# Example SSE server (legacy - backward compatibility):
# MCP_SERVERS=[{"name":"legacy-server","url":"http://localhost:3000/sse","transport":"sse","autoConnect":false}]

# Tool Approval Level
# Controls which tool executions require user approval before running
# 0 = OFF: All tools require approval (maximum safety)
# 1 = LOW: Only modifications require approval (read-only operations auto-allowed)
# 2 = MEDIUM: Reversible operations auto-allowed - reads, file edits, safe commands (DEFAULT)
#            Dangerous/irreversible operations require approval (rm -rf, git push, sudo, docker, MCP)
# 3 = HIGH: All tools auto-allowed (full automation, no approval)
TOOL_APPROVAL_LEVEL=2
